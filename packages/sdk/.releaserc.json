{
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "angular",
        "releaseRules": [
          { "scope": "sdk", "release": "patch" },
          { "scope": "sdk", "type": "feat", "release": "minor" },
          { "scope": "sdk", "breaking": true, "release": "major" },
          { "scope": "!sdk", "release": false }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "writerOpts": {
          "headerPartial": "## [@ganaka/sdk v{{version}}](https://github.com/shimorojune/ganaka/packages)\n\nPublished to GitHub Packages\n\n"
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": true,
        "tarballDir": "dist",
        "pkgRoot": "."
      }
    ],
    [
      "@semantic-release/github",
      {
        "successComment": false,
        "releasedLabels": false
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ],
  "preset": "angular",
  "tagFormat": "v${version}",
  "release": {
    "branches": ["main"]
  }
}
